{
  "name": "@tonightpass/root",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "turbo start",
    "build": "turbo run build",
    "build:apps": "turbo run build --filter=workshop --filter=docs",
    "build:docs": "turbo run build --filter=docs...",
    "dev": "node start-dev.js",
    "dev:packages": "turbo run dev --filter=packages",
    "dev:apps": "turbo run dev --filter=workshop --filter=docs",
    "dev:docs": "turbo run dev --filter=docs",
    "postinstall": "manypkg check",
    "prepare": "husky install && pnpm build",
    "version": "changeset version",
    "release": "changeset publish",
    "release:alpha": "pnpm changeset publish --tag alpha",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "size": "size-limit",
    "size:why": "size-limit --why",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:staged": "pretty-quick --staged"
  },
  "dependencies": {
    "@babel/core": "^7.22.9",
    "@babel/plugin-proposal-decorators": "^7.22.7",
    "@babel/plugin-transform-runtime": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@changesets/cli": "^2.26.2",
    "@manypkg/cli": "^0.21.0",
    "@size-limit/preset-big-lib": "^8.2.6",
    "@turbo/gen": "^1.9.7",
    "@types/node": "16.10.3",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "cross-spawn": "^7.0.3",
    "eslint": "^8.45.0",
    "eslint-config-antoine": "^1.0.6",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "merge-stream": "^2.0.0",
    "prettier": "^3.0.0",
    "pretty-quick": "^3.1.3",
    "turbo": "latest",
    "typescript": "4.4.3"
  },
  "packageManager": "pnpm@7.15.0"
}
